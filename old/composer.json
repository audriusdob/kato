{
	"name": "perminder-klair/kato",
	"description": "Kato CMS Based on Yii2",
	"keywords": ["kato", "cms", "content management", "web application"],
	"homepage": "http://www.getkato.com/",
	"type": "project",
	"license": "MIT",
	"support": {
		"issues": "https://github.com/perminder-klair/kato/issues",
		"wiki": "https://github.com/perminder-klair/kato/wiki",
		"source": "https://github.com/perminder-klair/kato"
	},
	"minimum-stability": "dev",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": "*",
        "yiisoft/yii2-bootstrap": "*",
        "yiisoft/yii2-swiftmailer": "*"
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "*",
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*"
    },
    "suggest": {
        "codeception/codeception": "Codeception, 1.8.*@dev is currently works well with Yii.",
        "codeception/specify": "BDD style code blocks for PHPUnit and Codeception",
        "codeception/verify": "BDD Assertions for PHPUnit and Codeception",
        "yiisoft/yii2-faker": "Fixtures generator for Yii2 based on Faker lib"
    },
	"scripts": {
		"post-create-project-cmd": [
			"yii\\composer\\Installer::setPermission"
		]
	},
    "config": {
        "process-timeout": 1800
    },
	"extra": {
		"writable": [
			"backend/runtime",
			"backend/web/assets",

			"console/runtime",
			"console/migrations",

			"frontend/runtime",
			"frontend/web/assets"
		]
	}
}
